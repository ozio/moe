  "author": "Nikolay Solovyov <i@mr-ozio.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ozio/moe/issues"
  },
  "homepage": "https://github.com/ozio/moe#readme",
  "dependencies": {
    "howler": "^2.0.0-rc2",
    "pixi.js": "^3.0.11"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-eslint": "^6.1.1",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "eslint": "^2.13.1",
