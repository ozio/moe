    "gulp-clean": "^0.3.2",
    "gulp-debug": "^2.1.2",
    "gulp-header": "^1.8.7",
    "gulp-sequence": "^0.4.5",
    "gulp-uglifyjs": "^0.6.2",
    "gulp-umd": "^0.2.0",
    "jsdoc": "^3.4.0",
    "jsdoc-strip-async-await": "^0.1.0",
    "mocha": "^2.5.3",
    "oz-jsdoc": "github:ozio/oz-jsdoc",
